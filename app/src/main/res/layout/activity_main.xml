<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_gravity="center">


    <android.support.v7.widget.Toolbar
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/toolbar_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/holo_blue_dark"
        android:gravity="center"
        android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical">


        <Button
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="附近"
            android:id="@+id/button_near"
            android:onClick="tabChange6"
            android:background="@drawable/leftbutton_background"
            android:layout_gravity="center_vertical" />

        <Button
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="预约快递"
            android:id="@+id/button_order"
            android:onClick="tabChange"
            android:layout_gravity="center_vertical"
            android:background="@drawable/rightbutton_bacaground"/>
    </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/framelayout_frag"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/toolbar_view">
    </FrameLayout>

</RelativeLayout>
